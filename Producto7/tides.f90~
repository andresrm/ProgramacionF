Module Constants
Integer, parameter :: n=7657
Integer, parameter :: d=48
Integer, parameter :: m=1440
End Module Constants

Program Tides




Use Constants
Implicit None 
real, dimension(2,7657) :: Data
real, dimension(2,5) :: Mes    !Extremos de cada mes
real, dimension(2,159) :: Dia  !Extremos de cada dÃ­a
real :: max=0
integer :: i, u, p


!Leer los datos del archivo 
open(1, file='mareas5.csv', status='old')
do i=1, n
   read (1,*) Data(1,i), Data(2,i)
   write (*,*) Data(1,i), Data(2,i)

end do
close (1)


do i=0, n, m
max=0
   do u=1, m
      if(Data(1,i+u)>max) then
         max=Data(1,i+u)
         p=i+u
      end if
    end do
print *, p, max
end do

end Program Tides


